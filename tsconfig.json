{
  "extends": "./tsconfig.settings",
  "include": ["**/*.ts", "**/*.tsx", "src/global.ts"],
  "exclude": ["./dist"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "emitDeclarationOnly": true,
    "jsx": "preserve",
    "jsxFactory": "element",
    "jsxFragmentFactory": "fragment",
    "paths": {
      "hypp": ["./src/index.ts"]
    }
  }
}
